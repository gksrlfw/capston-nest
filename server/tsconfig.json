{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@utility/*": ["src/utilities/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
